<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link href="~/Content/navigator.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light" style="margin-bottom: 50px; background-color: #134761 ">
                <a class="navbar-brand  text-light" href="#">SMIS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav">
                        @if (User.IsInRole("Professor")) {
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Faculty" asp-action="Index">Faculty</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Department" asp-action="Index">Department</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Student" asp-action="Index">Student</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Professor" asp-action="Index">Professor</a>
                            </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="ThesisSubject" asp-action="Index">Subject</a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link active text-light" asp-area="" asp-controller="ThesisRequest" asp-action="Index">Thesis Requests</a>
                        </li>
                            <li class="nav-item">
                                <a style="margin-left:100px" class="nav-link active text-light" asp-area="" asp-controller="Account" asp-action="Logout">Log out</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active text-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
